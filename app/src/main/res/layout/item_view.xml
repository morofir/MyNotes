<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="35dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:id="@+id/note_imgview"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/note"
                    />



            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_chat_item_tv"
                    android:hint="Time"
                    android:fontFamily="@font/montserrat"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:layout_gravity="right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_title_item"
                    android:hint="title"
                    android:fontFamily="@font/montserrat"
                    android:textSize="22sp"
                    android:textColor="@color/darkGray"
                    android:paddingStart="10dp"

                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_body_item"
                    android:text="text"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/black"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_time_item"
                    android:text="time"
                    android:gravity="right"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:textColorHint="@color/black"
                     />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>